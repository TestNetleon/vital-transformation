<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin"
        android:background="@drawable/shape_rect_curved_primary_light">

    <TextView
            android:id="@+id/textToaster_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="18sp"
            android:visibility="gone"/>

    <View android:id="@+id/vu4"
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_below="@+id/textToaster_title"
          android:background="@color/white"
          android:visibility="gone"/>

    <RelativeLayout
            android:id="@+id/rlToaster_43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vu4"
            android:padding="12dp">

        <TextView
                android:id="@+id/textToaster_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="12"
                android:fontFamily="@font/poppins_regular"
                android:scrollbars="vertical"
                android:textColor="@color/white"
                android:textSize="14sp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textToaster_message"
                android:gravity="end"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textToaster_negative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:paddingBottom="9dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingTop="9dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="gone"/>

            <TextView
                    android:id="@+id/textToaster_neutral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:paddingBottom="9dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="9dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="gone"/>

            <TextView
                    android:id="@+id/textToaster_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="25dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingBottom="9dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="9dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>